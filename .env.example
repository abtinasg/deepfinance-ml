# DeepFinance ML Engine v2 - Environment Variables

# =============================================================================
# Application
# =============================================================================
PORT=8000
DEBUG=false

# =============================================================================
# Security (REQUIRED)
# =============================================================================
# Generate a secure key: openssl rand -hex 32
ML_SERVICE_API_KEY=your-secure-api-key-here

# Frontend origin for CORS
FRONTEND_ORIGIN=https://deepin.app

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379

# Cache TTLs (seconds)
MODEL_CACHE_TTL=3600
DATA_CACHE_TTL=300
PREDICTION_CACHE_TTL=60

# =============================================================================
# Data Providers
# =============================================================================
# Optional: Finnhub API key for fallback data source
FINNHUB_API_KEY=

# Timeouts (seconds)
YAHOO_TIMEOUT=30
FINNHUB_TIMEOUT=15

# =============================================================================
# Model Configuration
# =============================================================================
PREDICTION_HORIZON=5
LOOKBACK_PERIOD=60

# Ensemble weights (must sum to 1.0)
XGBOOST_WEIGHT=0.35
LSTM_WEIGHT=0.35
TRANSFORMER_WEIGHT=0.30

# =============================================================================
# Risk Metrics
# =============================================================================
RISK_FREE_RATE=0.05
BENCHMARK_SYMBOL=^GSPC

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
